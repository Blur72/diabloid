<Page x:Class="WpfApp4.menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp4"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="menu">

    <Grid Background="Black">
        <Button x:Name="btnSingle" Content="Single player" FontSize="64" Foreground="Yellow" VerticalAlignment="Top" HorizontalAlignment="Center" Background="Black" BorderBrush="Black" Click="btnSingle_Click" Margin="0,500,0,0"></Button>
        <Button x:Name="btnMulty" Content="Multy player" FontSize="64" Foreground="Yellow" VerticalAlignment="Top" HorizontalAlignment="Center" Background="Black" BorderBrush="Black" Click="btnMulty_Click" Margin="0, 650,0,0"/>
        <Button x:Name="btnExit" Content="Exit player" FontSize="64" Foreground="Yellow" VerticalAlignment="Top" HorizontalAlignment="Center" Background="Black" BorderBrush="Black" Click="btnExit_Click" Margin="0, 800 ,0,0"/>
    </Grid>
</Page>
