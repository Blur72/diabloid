        <Button x:Name="srtMinus" Content="-" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" FontSize="30" Background="Black" BorderBrush="White" Margin="1042,225,0,0" Height="75" Width="75"/>
