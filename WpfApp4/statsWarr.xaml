        <TextBlock Text="Str:" Foreground="White" FontSize="70" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="94,210,0,0"/>
        <TextBlock Text="Dex:" Foreground="White" FontSize="70" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="94,290,0,0"/>
        <TextBlock Text="Int:" Foreground="White" FontSize="70" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="94,370,0,0"/>
        <TextBlock Text="Health:" Foreground="White" FontSize="70" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="94,639,0,0"/>
