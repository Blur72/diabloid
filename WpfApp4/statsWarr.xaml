        <TextBlock Text="Points:" Foreground="White" FontSize="70" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="941,851,0,0"/>
        <TextBox x:Name="points" Background="Black" HorizontalAlignment="Left" VerticalAlignment="Top" Height="166" Width="336" Margin="1200,815,0,0" BorderBrush="White"></TextBox>
        <Label Name="lvlSrt" Content="Label" HorizontalAlignment="Left" Margin="325,210,0,0" VerticalAlignment="Top" Height="75" Width="316" Loaded="lvlSrt_Loaded"/>
        <Label Name="lblDex" Content="Label" HorizontalAlignment="Left" Margin="325,290,0,0" VerticalAlignment="Top" Height="75" Width="316"/>
        <Label Name="lblInt" Content="Label" HorizontalAlignment="Left" Margin="325,370,0,0" VerticalAlignment="Top" Height="93" Width="317"/>
        <Label Name="lblHealth" Content="Label" HorizontalAlignment="Left" Margin="420,644,0,0" VerticalAlignment="Top" Height="93" Width="317"/>
